<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="Select a Service!"
            android:textSize="50dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/carpenter_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:elevation="0dp"
                    app:backgroundTint="#689f38"
                    app:borderWidth="0dp"
                    app:fabSize="normal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="215dp"
                    android:elevation="7dp"
                    android:text="Carpenter"
                    android:textColor="#000000"
                    android:id="@+id/txtCarp"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp">

                <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/plumber_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="70dp"
                    android:layout_gravity="right"
                    android:elevation="0dp"
                    app:backgroundTint="#689f38"
                    app:borderWidth="0dp"
                    app:fabSize="normal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_gravity="right"
                    android:elevation="7dp"
                    android:text="Plumber"
                    android:textColor="#000000"
                    android:id="@+id/txtPlumb"/>

                <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/electrician_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="left"
                    android:elevation="0dp"
                    app:backgroundTint="#689f38"
                    app:borderWidth="0dp"
                    app:fabSize="normal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_gravity="left"
                    android:elevation="30dp"
                    android:text="Electrician"
                    android:textColor="#000000"
                    android:id="@+id/txtElec"/>

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>