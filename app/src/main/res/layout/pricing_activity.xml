<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Following are the prices of the Services required!"
            android:fontFamily="serif-monospace"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:padding="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The pricing are as follows:

                Visiting Charge: 50
                Per Day Basis: 500"
                android:textStyle="bold"
                android:maxLines="5"
                android:lines="5"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the Description of the service required"
                android:lines="5"
                android:id="@+id/description_carpenter"/>

            <Button
                android:id="@+id/request_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm your Request"
                android:backgroundTint="#689f38"
                android:textColor="#ffff"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>